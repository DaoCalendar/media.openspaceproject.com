{% set global = namespace(nColumns = 4) %}

{% macro insert_image(url, path, width) %}
  <a href="{{ url }}">
    <figure>
      <img class="img-fluid rounded" src="{{ url }}" alt="{{ path }}" width="{{ width }}" />
    </figure>
  </a>
{% endmacro %}

{% macro insert_video(video, width) %}
  <div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" width="{{ width }}" height="{{ width / (1920.0/1080.0) }}" src="{{ video }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </div>
{% endmacro %}

{% macro insert_element(file) %}
  {% set sm_col_width = ((12 / global.nColumns)|string).rstrip('.0') %}

  <div class="col-sm-{{sm_col_width}}">
    {% if file.type == 'image' %}
      <div class="panel-body">{{ insert_image(file.url, file.path, 500) }}</div>
    {% elif file.type == 'video' %}
       <div class="panel-body">{{ insert_video(file.video, 500) }}</div>
    {% endif %}
    {% if file.description is defined %}
      <div class="panel-footer">{{ file.description }}</div>
    {% endif %}
  </div>
{% endmacro %}

