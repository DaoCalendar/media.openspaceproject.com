<main>

<div>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Toggle all groups</button>
</div>

<div class="container-fluid">
{% for item in items.directories recursive %}
  <div class="panel-group row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h{{loop.depth}} class="panel-title">
          <a data-toggle="collapse" href="#collapse-header-{{loop.depth}}-{{loop.index}}">{{ item.name }}</a>
        </h{{loop.depth}}>
      </div>
      <div id="collapse-header-{{loop.depth}}-{{loop.index}}" class="panel-collapse collapse in multi-collapse">
        <div class="panel panel-default">
          {% for f in item.files %}
            {{ insert_element(f) }}
          {% else %}
            <div class="panel-body" />
          {% endfor %}
        </div>
        <div>
          {{ loop(item.directories) }}
        </div>
      </div>
    </div>
  </div>
{% endfor %}
</div>
</main>

</body>

<footer>
  <div>OpenSpace Teams</div>
  <div><a href="https://openspaceproject.com">GitHub: OpenSpace Project</a></div>
